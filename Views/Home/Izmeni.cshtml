


@model WebAppOglas.Models.Automobil

@{
    ViewBag.Title = "Izmeni";
}


<div class="card-header shadow-lg info-color white-text text-center col-md-8">
    <h3>Izmeni oglas</h3>
</div>

  <div class="card card-sm shadow-lg col-md-8 flex-center central">


    @using (Html.BeginForm("Izmeni", "Home", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
     {
         <table>
            <tr>
                <td class="text-left">
                    <div class="col-md-12">
                        <br />
                        @Html.TextBoxFor(m => m.Marka, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Marka, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Godiste, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Godiste, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.ZapreminaMotora, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.ZapreminaMotora, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Snaga, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Snaga, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Gorivo, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Gorivo, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Karoserija, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Karoserija, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Opis, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Opis, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Cena, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Cena, null, new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Kontakt, null, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Kontakt, null, new { @class = "text-danger" })
                    </div>

                    <div class="card-group form-control-sm">
                        <input type="submit" value="Save" class="btn btn-default btn-sm" />
                    </div>
                </td>
                <td>
                    <div class="col-md-2">
                        <img src="~/img/@Html.DisplayFor(p => p.Fotografija)" height="280" width="280" alt="image" />
                        <br /><br />
                        <input asp-for="Fotografija" type="file" name="fotografija" />
                    </div>
                </td>
            </tr>
        </table>
         <br />   
    }
</div>
