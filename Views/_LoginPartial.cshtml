

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="default-color nav form-inline float-right">
    @if (SignInManager.IsSignedIn(User))
    {


        <li class="nav-item default-color">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link py-0" style="width:auto">Logout</button>
            </form>
        </li>

        <li class="nav-link default-color">
            <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User) </a>
        </li>


    }
    else
    {
        <li class="nav-link default-color"><a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-link"><a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    }
</ul>
