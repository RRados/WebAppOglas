@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="nav form-inline float-right">

    @if (SignInManager.IsSignedIn(User))
     {
        <li class="nav-item">
            <a class="nav-link text-primary" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User) </a>
        </li>
  
        <li class="nav-item text-primary">              
            <form class="form-sm text-primary" id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn-sm btn btn-outline text-primary">Logout</button>
            </form>
        </li>
        
     }
     else
     {
        <li class="nav-item">
            <a class="nav-link text-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
     }
</ul>
