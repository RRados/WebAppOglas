@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}



<div class="row shadow-lg rounded-lg" style="background-color: #1f2937"  >

    <h1 class="card-header text-light">@ViewData["Title"]</h1>

    <div class="container">   

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />

            <div class="form-group text-light">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-light">
                <button type="submit" class="btn btn-primary btn">REGISTER</button>
            </div>
            <br />
            <br />
        </form>         
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
